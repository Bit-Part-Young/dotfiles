{
    "editor.inlineSuggest.enabled": true,
    "terminal.integrated.fontFamily": "MesloLGM Nerd Font",
    "workbench.startupEditor": "none",
    "security.workspace.trust.untrustedFiles": "open",
    "terminal.integrated.sendKeybindingsToShell": true,
    "remote.SSH.remotePlatform": {
        "Master": "linux",
        "SiYuan": "linux",
        "Pi": "linux",
        "Manager": "linux"
    },
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "Solarized Dark",
    "git.ignoreLegacyWarning": true,
    
    // python formatter configuration
    "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": true
        }
    },
    "isort.args":["--profile", "black"],

    "settingsSync.ignoredExtensions": [
        "ms-vscode-remote.vscode-remote-extensionpack"
    ],
    "github.copilot.enable": {
        "*": true,
        "plaintext": true,
        "markdown": true,
        "scminput": false
    },
    "workbench.editorAssociations": {
        "*.pdf": "pdf.preview"
    },
    "markdown-preview-enhanced.previewTheme": "atom-light.css",
    "diffEditor.renderSideBySide": false,

    // vim configuration
    "vim.leader": "<space>",
    "vim.surround": true,
    "vim.easymotion": true,
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": false,
        "<C-c>": false
    },
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "j"],
            "after": ["<Esc>"]
        }
    ],
    "vim.normalModeKeyBindings": [
        {
            "before": ["j"],
            "after": ["g", "j"]
        },
        {
            "before": ["k"],
            "after": ["g", "k"]
        },
        {
            "before": ["K"],
            "after": ["5", "k"]
        },
        {
            "before": ["J"],
            "after": ["5", "j"]
        },
        {
            "before": ["L"],
            "after": ["$"]
        },
        {
            "before": ["H"],
            "after": ["^"]
        }
    ],

    /*
    // picgo configuration
    "picgo.customUploadName": "${fileName}-${date}${extName}",
    "picgo.picBed.current": "github",
    "picgo.picBed.uploader": "github",
    "picgo.picBed.github.branch": "master",
    "picgo.picBed.github.path": "",
    "picgo.picBed.github.customUrl": "",
    "picgo.picBed.github.token": "",
    "picgo.picBed.github.repo": "Bit-Part-Young/BTY-imgs",
    */

    "editor.wordWrap": "on"

